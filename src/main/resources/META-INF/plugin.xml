<idea-plugin>
  <id>mitchinson.cpb</id>
  <name>Celeste Progress Bar</name>
  <version>1.0</version>
  <idea-version since-build="221"/>
  <vendor email="mitchinson.dev@gmail.com">bmitchinson</vendor>

  <description><![CDATA[
      This is the Celeste Progress Bar for IJ based IDEs based on the Mario Progress Bar by KikiManjaro.
      It displays a Celeste berry with some pico-8 platformer tiles for the basic bar and a flying strawberry for the indeterminate one.
      <br>
      <br>
      DETERMINATE:
      <br>
      <img src="https://i.imgur.com/d5brRnf.png" title="CelesteDeterminateBar" />
      <br>
      INDETERMINATE:
      <br>
      <img src="https://i.imgur.com/2ulW5K0.png" title="CelesteIndeterminateBar" />
    ]]></description>

  <change-notes><![CDATA[
      <em>1.0 Creation of the Celeste Progress Bar Project by forking Mario Progress Bar</em><br>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <depends>com.intellij.modules.platform</depends>

  <extensions defaultExtensionNs="com.intellij">
  </extensions>

  <actions>
    <!-- Add your actions here -->
  </actions>

  <applicationListeners>
    <listener class="mitchinson.celeste.ProgressBarLafManagerListener"
              topic="com.intellij.ide.ui.LafManagerListener" />
    <listener class="mitchinson.celeste.ProgressBarLafManagerListener"
              topic="com.intellij.openapi.application.ApplicationActivationListener"/>
  </applicationListeners>
</idea-plugin>
